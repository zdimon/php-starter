{
  "name": "formName",
  "method": "post",
  "action": "post/portfolio.php",
  "properties": {
    "firstName": {
      "type": "input",
      "title": "First name",
      "name": "firstName",
      "value": "test",
      "required": true,
      "onChange": "console.log(this.value)",
      "label-class": "mdc-text-field mdc-text-field--filled",
      "input-class": "mdc-text-field__input",
      "span-class": "mdc-line-ripple"
    },
    "lastName": {
      "type": "input",
      "title": "Last name",
      "name": "lastName",
      "disabled": true
    },
    "age": {
      "type": "number",
      "title": "Age",
      "name": "age"
    },
    "bio": {
      "type": "input",
      "title": "Bio",
      "name": "bio",
      "placeholder": "Biography"
    },
    "password": {
      "type": "password",
      "title": "Password",
      "name": "password",
      "min": 3
    },
    "language": {
      "type": "select",
      "title": "Language",
      "name": "lang",
      "options": { "en": "English", "fa": "Farsi", "de": "German" }
    },
    "submit": {
      "type": "submit",
      "title": "Save Form",
      "name": "submit"
    }
  }
}
